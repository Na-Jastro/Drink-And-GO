@using DrinkAndGo.ViewModel
@model DrinkListViewModel

<div>
    <h2>All drinks are shown here</h2>
</div>
<h2>@ViewBag.Name</h2>
@{
    foreach (var drink in Model.Drinks)
    {
        <div>
            <h4>Drink Name: @drink.Name</h4>
            <h4>Price: @drink.Price</h4>
        </div>
    }
}